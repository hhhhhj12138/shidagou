<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.test.myshop.widget.CNiaoToolBar
            android:id="@+id/tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetEnd="56dp"
            app:title="详细信息"
            />
         <ImageView
             android:id="@+id/det_back"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_alignParentLeft="true"
             android:layout_marginTop="12dp"
             android:src="@drawable/icon_back_32px" />


        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"

            app:auto_cycle="true"
            app:indicator_visibility="visible"
            app:pager_animation="Accordion"
            app:pager_animation_span="1100" />

    </RelativeLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥200"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="我是一本小黄书"
        android:textColor="@color/black"
        android:textSize="25dp"
        />



    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式:12345678910"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注：xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/largePadding"
        android:layout_gravity="bottom">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="加入收藏"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        style="@style/smallRedButton"
        android:layout_weight="1"
        />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="1111"
       android:textSize="10dp"
       />


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="加入订单"
            style="@style/smallRedButton"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注：若确认购买可加入订单。"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:layout_marginLeft="10dp"

        />

</LinearLayout>